<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_pnp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/welcomeTextView"
        android:contentDescription="Logo PNP" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang di Politeknik Negeri Padang"
        android:textSize="18sp"
        android:textColor="#ffa500"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Location Text -->
    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limau Manih, Padang, Sumbar"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Manajemen Informatika Button -->
    <Button
        android:id="@+id/btnManajemenInformatika"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manajemen Informatika"
        android:textColor="@color/white"
        app:backgroundTint="#ffa500"
        app:layout_constraintTop_toBottomOf="@+id/locationTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Teknik Komputer Button -->
    <Button
        android:id="@+id/btnTeknikKomputer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Teknik Komputer"
        android:textColor="@color/white"
        app:backgroundTint="#ffa500"
        app:layout_constraintTop_toBottomOf="@+id/btnManajemenInformatika"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Galeri Photo Button -->
    <Button
        android:id="@+id/btnGaleriPhoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Galeri Photo"
        android:textColor="@color/white"
        app:backgroundTint="#ffa500"
        app:layout_constraintTop_toBottomOf="@+id/btnTeknikKomputer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
